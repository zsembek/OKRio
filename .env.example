# Core settings
ADMIN_EMAIL=admin@example.com
FRONTEND_URL=https://app.example.com
BACKEND_URL=https://api.example.com
POSTGRES_URL=postgresql+psycopg2://okrio:okrio@postgres:5439/okrio
REDIS_URL=redis://redis:6379/0
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672//
JWT_SECRET=super-secret-key
CORS_ORIGINS=https://app.example.com,https://staging.example.com
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW_SECONDS=60

# Local file storage
STORAGE_ROOT=/var/lib/okrio/storage

# Azure AD OAuth
AZURE_TENANT_ID=00000000-0000-0000-0000-000000000000
AZURE_CLIENT_ID=00000000-0000-0000-0000-000000000000
AZURE_CLIENT_SECRET=change-me
AZURE_REDIRECT_URI_FRONTEND=https://app.example.com/auth/callback
AZURE_REDIRECT_URI_BACKEND=https://api.example.com/auth/callback
AZURE_LOGOUT_REDIRECT_URI=https://app.example.com/logout
AZURE_OAUTH_SCOPES=openid profile email offline_access
AZURE_AUTHORITY=https://login.microsoftonline.com/00000000-0000-0000-0000-000000000000
MS_GRAPH_BASE_URL=https://graph.microsoft.com/v1.0
MS_GRAPH_SCOPES=User.Read Files.Read.All Sites.Read.All

# Feature toggles / telemetry
MS_TEAMS_WEBHOOK_URL=
SLACK_WEBHOOK_URL=
SENDGRID_API_KEY=
